! restore normal terminal behavior
URxvt.termName: xterm-256color
URxvt.iso14755: false
URxvt.iso14755_52: false
URxvt.keysym.Control-Left:   \033[1;5D
URxvt.keysym.Control-Right:  \033[1;5C

! appearance
URxvt.scrollBar: false
URxvt.font: xft:Noto Mono:style=Regular:size=11:antialias=true

! disable autoscroll on output
URxvt.scrollTtyOutput: false
URxvt.scrollWithBuffer: true
URxvt.scrollTtyKeypress: true

! extensions
URxvt.perl-ext-common: default,resize-font
! ! resize (ext: resize-font)
URxvt.resize-font.step: 2
URxvt.keysym.C-minus: resize-font:smaller
URxvt.keysym.C-KP_Subtract: resize-font:smaller
URxvt.keysym.C-plus: resize-font:bigger
URxvt.keysym.C-KP_Add: resize-font:bigger
URxvt.keysym.C-KP_0: resize-font:reset
! ! copy/paste (ext: default)
URxvt.keysym.Control-Meta-c: builtin-string:
URxvt.keysym.Control-Meta-v: builtin-string:
URxvt.keysym.Shift-Control-V: eval:paste_clipboard
URxvt.keysym.Shift-Control-C: eval:selection_to_clipboard
