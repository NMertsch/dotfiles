; Documentation:
; https://github.com/polybar/polybar/wiki

[colors]
background = ${xrdb:polybar.background}
background-alt = ${xrdb:polybar.background_alt}
text = ${xrdb:polybar.text}
text-alt = ${xrdb:polybar.text_alt}
border = ${xrdb:polybar.border}
highlight = ${xrdb:polybar.highlight}
alert = ${xrdb:polybar.alert}

[bar/baselayout]
; requires MONITOR to be set in the environment
monitor = ${env:MONITOR:}
bottom = true
width = 100%
height = 20
offset-x = 0%
offset-y = 0%
radius = 0
border-size = 0
border-top-size = 0
border-color = ${colors.border}
padding-left = 0
padding-right = 0
module-margin-left = 2
module-margin-right = 0
enable-ipc = true

background = ${colors.background}
foreground = ${colors.text}
line-size = 2

; main font
font-0 = Noto Sans:pixelsize=11;antialias=true;2
; cpu and ram bars
font-1 = Noto:pixelsize=13;2
; font for boring symbols
font-2 = DejaVu Mono:pixelsize=12;2
; icon fonts
font-3 = Font Awesome 5 Free Solid:pixelsize=12;2
font-4 = Font Awesome 5 Brands:pixelsize=12;2
font-5 = Font Awesome 5 Free Regular:pixelsize=12;2

[bar/main]
inherit = bar/baselayout
modules-left = i3
modules-center =
modules-right = apt-updates bluetooth kb-layout-toggle pulseaudio xbacklight network-wireless network-wired battery-monitor date

; system tray
tray-position = center
tray-padding = 0
tray-background = ${colors.background}

[bar/secondary]
inherit = bar/baselayout
padding-right = 1

modules-left = i3
modules-center = 
modules-right = time

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true

enable-click = true
enable-scroll = false

; Only show workspaces on the same output as the bar
pin-workspaces = true

; mode = e.g. Resize mode from default i3 config
label-mode-foreground = ${colors.text}
label-mode-background = ${colors.alert}
label-mode-padding = 2

; focused = Active workspace on focused monitor
label-focused = %index%
label-focused-foreground = ${colors.text}
label-focused-background = ${colors.background-alt}
label-focused-padding = ${self.label-mode-padding}
label-focused-underline = ${colors.highlight}

; unfocused = Inactive workspace on any monitor
label-unfocused = %index%
label-unfocused-foreground = ${colors.text}
label-unfocused-background = ${colors.background}
label-unfocused-padding = ${self.label-mode-padding}

; visible = Active workspace on unfocused monitor
label-visible = %index%
label-visible-foreground = ${colors.text}
label-visible-background = ${colors.background}
label-visible-padding = ${self.label-mode-padding}
label-visible-underline = ${colors.highlight}

; urgent = Workspace with urgency hint set
label-urgent = %index%
label-urgent-foreground = ${colors.text}
label-urgent-background = ${colors.alert}
label-urgent-padding = ${self.label-mode-padding}

[module/network-wireless]
type = internal/network
interface = ${env:WIRELESS:wlan0}
interval = 3
format-connected = <label-connected>
format-disconnected = <label-disconnected>
label-connected = %{T4}%{T1}
label-connected-foreground = ${colors.text}
label-disconnected =

[module/network-wired]
type = internal/network
interface = ${env:WIRED:eth0}
interval = 3
format-connected = <label-connected>
format-disconnected = <label-disconnected>
label-connected = 
label-connected-font = 4
label-connected-foreground = ${colors.text}
label-disconnected = 
label-disconnected-font = 4
label-disconnected-foreground = ${colors.text-alt}

[module/xbacklight]
type = internal/xbacklight
format = <ramp>
enable-scroll = true
ramp-0 = 
ramp-1 = 
ramp-0-font = 6
ramp-1-font = 4

[module/cpu-temperature]
type = internal/temperature
interval = 1
thermal-zone = 0
warn-temperature = 70
format = <label>
label = " %temperature-c:5%"
format-underline = ${colors.highlight}
format-offset = -5
label-warn = ${self.label}
format-warn-offset = -5
label-warn-foreground = ${colors.alert}
format-warn-underline = ${colors.highlight}

[module/cpu-percentage]
type = internal/cpu
interval = 1
format = <label>
format-offset = -5
format-underline = ${colors.highlight}
label = " %percentage:3% %"

[module/cpu-label]
type = custom/text
content = 
content-font = 4
content-foreground = ${colors.highlight}

[module/cpu-bars]
type = internal/cpu
interval = 1
format = <ramp-coreload>
format-foreground = ${colors.highlight}
format-background = ${colors.background-alt}
ramp-coreload-font = 2
ramp-coreload-spacing = 0
ramp-coreload-0 = ▁
ramp-coreload-1 = ▂
ramp-coreload-2 = ▃
ramp-coreload-3 = ▄
ramp-coreload-4 = ▅
ramp-coreload-5 = ▆
ramp-coreload-6 = ▇
ramp-coreload-7 = █

[module/memory-percentage]
type = internal/memory
interval = 1
format = <label>
label = " %percentage_used:3% %"
format-underline = ${colors.highlight}
format-offset = -5

[module/memory-label]
type = custom/text
content = 
content-font = 4
content-foreground = ${colors.highlight}

[module/memory-bar]
type = internal/memory
interval = 2
format = <ramp-used>
format-foreground = ${colors.highlight}
format-background = ${colors.background-alt}
module-margin-left = 0
ramp-used-font = 2
ramp-used-0 = ▁
ramp-used-1 = ▂
ramp-used-2 = ▃
ramp-used-3 = ▄
ramp-used-4 = ▅
ramp-used-5 = ▆
ramp-used-6 = ▇
ramp-used-7 = █

[module/date]
type = internal/date
interval = 5
date = "%a %d.%m.%Y"
time = %H:%M
format-prefix-foreground = ${colors.text-alt}
label = %date% %time%

[module/time]
type = internal/date
interval = 5
time = %H:%M
format-prefix-foreground = ${colors.text-alt}
label = %time%

[module/pulseaudio]
type = internal/pulseaudio

format-volume = <ramp-volume>
ramp-volume-0 = 
ramp-volume-1 = 
ramp-volume-font = 4

label-muted = %{T4}%{T1}
label-muted-foreground = ${colors.text-alt}

[module/battery]
type = internal/battery
battery = BAT1
adapter = ACAD
poll-interval = 5

format-charging = <label-charging>
format-charging-underline = ${colors.battery-line}
label-charging = %{T3}↑%{T1} %percentage:3% %

format-discharging = <label-discharging>
format-discharging-underline = ${self.format-charging-underline}
label-discharging = %{T3}↓%{T1} %percentage:3% %

format-full = <label-full>
format-full-underline = ${self.format-charging-underline}
label-full = %{T4}%{T1} %percentage:3% %

[module/apt-updates]
type = custom/script
exec = ~/.config/polybar/scripts/apt-updates
; short interval so that the messege goes away...
interval = 10
format-foreground = ${colors.alert}

[module/volume-control]
type = custom/script
exec = ~/.config/polybar/scripts/volume-control
click-left = ~/.config/polybar/scripts/volume-control --toggle
click-right = exec pavucontrol

[module/battery-monitor]
type = custom/script
exec = ~/.config/polybar/scripts/battery-monitor
click-left = ~/.config/polybar/scripts/showBattery
interval = 5

[module/bluetooth]
type = custom/script
exec = ~/.config/polybar/scripts/bluetooth
interval = 5
click-left = exec blueman-manager

[module/kb-layout-display]
type = internal/xkeyboard
blacklist-0 = num lock
blacklist-1 = scroll lock
blacklist-2 = caps lock

[module/kb-layout-toggle]
type = custom/ipc
hook-0 = setxkbmap us; echo  US
hook-1 = setxkbmap de; echo  DE
initial = 1
click-left = ~/.config/polybar/scripts/kb-layout %pid%

[settings]
screenchange-reload = true
